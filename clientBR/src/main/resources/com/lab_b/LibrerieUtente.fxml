<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" styleClass="root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bookrecommender.client.controller.LibrerieUtenteController">
   <children>

      <Pane prefHeight="600.0" prefWidth="220.0" styleClass="sidebar">
         <children>
            <VBox prefHeight="600.0" prefWidth="220.0" spacing="5.0">
               <padding>
                  <Insets bottom="20.0" left="10.0" right="10.0" />
               </padding>
               <children>
                  <Pane prefHeight="20.0" />
                  <Button mnemonicParsing="false" onAction="#btnClickRicercaLibri" prefHeight="50.0" prefWidth="200.0" styleClass="sidebar-button" text="Ricerca Libri" />

                  <Region VBox.vgrow="ALWAYS" />

                  <Label fx:id="labelNomeUtente" alignment="CENTER" prefWidth="200.0" styleClass="sidebar-user-label" text="Utente" wrapText="true" />
                  <Button mnemonicParsing="false" onAction="#btnClickLogout" prefHeight="45.0" prefWidth="200.0" styleClass="sidebar-logout" text="ESCI" />
               </children>
            </VBox>
         </children>
      </Pane>

      <VBox layoutX="220.0" prefHeight="600.0" prefWidth="680.0" spacing="15.0">
         <padding>
            <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
         </padding>
         <children>

            <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="page-title" text="Le tue Librerie" />

            <VBox spacing="5.0" style="-fx-background-color: white; -fx-border-color: #BDC3C7; -fx-border-radius: 4; -fx-padding: 10;">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d; -fx-font-size: 12px;" text="CREA NUOVA LIBRERIA" />
                  <HBox spacing="10.0">
                     <children>
                        <TextField fx:id="tfNomeNuovaLibreria" prefHeight="40.0" promptText="Nome nuova libreria..." styleClass="modern-input" HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#btnCreaLibreria" prefHeight="40.0" prefWidth="120.0" styleClass="action-button" text="Crea" />
                     </children>
                  </HBox>
               </children>
            </VBox>

            <VBox spacing="5.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d; -fx-font-size: 12px;" text="ELENCO LIBRERIE ESISTENTI" />

                  <Pane VBox.vgrow="ALWAYS">
                     <children>
                        <ListView fx:id="listaLibrerieUtente" prefHeight="300.0" prefWidth="600.0" styleClass="list-view" />
                        <Label fx:id="listLabel" alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="280.0" prefWidth="580.0" text="Nessuna libreria presente" textFill="#95a5a6" visible="false" />
                     </children>
                  </Pane>
               </children>
            </VBox>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Button fx:id="btnGuardaLibreria" mnemonicParsing="false" onAction="#btnClickGuardaLibreria" prefHeight="45.0" prefWidth="150.0" styleClass="action-button" text="Apri Libreria" visible="false" />

                  <Region HBox.hgrow="ALWAYS" />

                  <Button fx:id="btnEliminaLibreria" mnemonicParsing="false" onAction="#btnClickEliminaLibreria" prefHeight="45.0" prefWidth="150.0" styleClass="delete-button" text="Elimina Libreria" visible="false" />
               </children>
            </HBox>

            <Label fx:id="errorLabel" alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="status-label" wrapText="true" />

         </children>
      </VBox>
   </children>
</AnchorPane>
